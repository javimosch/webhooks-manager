<%- include('_top', { title: 'Global Settings' }) %>

<h1 class="text-3xl font-bold mb-6">Global Settings</h1>

<form action="/settings" method="POST" class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <div class="mb-4">
        <label for="globalTimeout" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Global Timeout (seconds)</label>
        <input type="number" id="globalTimeout" name="globalTimeout" value="<%= settings ? settings.globalTimeout / 1000 : '30' %>" min="1" max="300" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50">
    </div>

    <div class="mb-4">
        <label for="guiTheme" class="block text-sm font-medium text-gray-700 dark:text-gray-300">GUI Theme</label>
        <select id="guiTheme" name="guiTheme" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50">
            <option value="light" <%= settings && settings.guiTheme === 'light' ? 'selected' : '' %>>Light</option>
            <option value="dark" <%= settings && settings.guiTheme === 'dark' ? 'selected' : '' %>>Dark</option>
        </select>
    </div>

    <div class="flex justify-end">
        <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
            Save Settings
        </button>
    </div>
</form>

<%- include('_bottom') %>