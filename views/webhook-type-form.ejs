<%- include('_top', { title: webhookType ? 'Edit Webhook Type' : 'New Webhook Type' }) %>

<h1 class="text-3xl font-bold mb-6"><%= webhookType ? 'Edit' : 'New' %> Webhook Type</h1>

<form action="<%= webhookType ? '/webhook-types/' + webhookType._id : '/webhook-types' %>" method="POST" class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <% if (webhookType) { %>
        <input type="hidden" name="_method" value="PUT">
    <% } %>
    <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
        <input type="text" id="name" name="name" value="<%= webhookType ? webhookType.name : '' %>" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50">
    </div>

    <div class="mb-4">
        <label for="runType" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Run Type</label>
        <select id="runType" name="runType" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50">
            <option value="parallel" <%= webhookType && webhookType.runType === 'parallel' ? 'selected' : '' %>>Parallel</option>
            <option value="series" <%= webhookType && webhookType.runType === 'series' ? 'selected' : '' %>>Series</option>
        </select>
    </div>

    <div class="flex justify-end">
        <a href="/webhook-types" class="mr-2 px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">Cancel</a>
        <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
            <%= webhookType ? 'Update' : 'Create' %> Webhook Type
        </button>
    </div>
</form>

<%- include('_bottom') %>